BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        spacing: 10

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            input_filter: 'float'

        Label:
            text: 'miles'

    BoxLayout:
        spacing: 10

        Button:
            text: '+1'
            on_press: app.handle_increment(1)

        Button:
            text: '-1'
            on_press: app.handle_increment(-1)

    Button:
        text: 'Convert'
        on_press: app.handle_calculate()

    Label:
        id: output_label
        text: '0.000'
